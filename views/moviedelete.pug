extends layout 
 
block content 
  h1= title 
 
  if (toShow == null) 
    h2 No instance to delete 
  else 
    - let movieid = toShow._id 
    - let moviename = toShow.moviename 
    - let movielength = toShow.length 
    - let moviedirector = toShow.director 
    - let actionid = "/resource/movies/" + movieid 
    script let actionid = "#{actionid}" 
    div 
      div.row 
        div(class='movieAttr mr-3') movie ID is: 
        div #{movieid} 
      div.row 
        div(class='movieAttr mr-3') movie Type is: 
        div #{moviename} 
      div.row 
        div(class='movieAttr mr-3') movie director is: 
        div #{moviedirector} 
      div.row 
        div(class='movieAttr mr-3') movie length is: 
        div #{movielength} 
 
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete 
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel 
 
  script. 
    function cancel() { 
      // Go back to the home page for the movie collection 
      window.location.href='/movies' 
    } 
  script. 
    function deleteOnid() { 
      console.log("starting delete") 
      // delete first 
      fetch(actionid, { 
        method: 'DELETE'    
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Delete succeded") 
        window.location.href='/movies' 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Delete failed " + error ) 
      }); 
    } 